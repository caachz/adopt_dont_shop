<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <%= image_tag("#{pet.image}", :size => "260x180") %>
  <p>Name: <%= pet.name %></p>
  <p>Age: <%= pet.age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Shelter: <%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></p>
  <%= link_to "Edit Pet #{pet.name}", "/pets/#{pet.id}/edit" %>
  <%= link_to "Delete Pet #{pet.name}", "/pets/#{pet.id}", method: :delete %>
<% end %>
