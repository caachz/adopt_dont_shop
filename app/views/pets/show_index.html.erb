<h1>Pets Available For Adoption From #{pet.shelter.name}</h1>

<% @available_pets.each do |pet| %>
  <%= image_tag("#{pet.image}", :size => "260x180") %>
  <p>Name: <%= pet.name %></p>
  <p>Age: <%= pet.age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Shelter: <%= pet.shelter.name %></p>
<% end %>

<%= link_to 'Create Pet', "/shelters/#{params[:id]}/pets/new" %>
